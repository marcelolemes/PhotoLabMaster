<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.username">
            root
        </property>
        <property name="hibernate.connection.password">
            root
        </property>
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/login

        </property>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQL5InnoDBDialect
        </property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="br.com.login.model.User"/>
        <mapping class="br.com.login.bean.users.UserBean"/>
        <mapping class="br.com.login.model.Contrato"/>
        <mapping class="br.com.login.model.Album"/>
        <mapping class="br.com.login.model.Ficha"/>
        <mapping class="br.com.login.model.Cliente"/>
        <mapping class="br.com.login.model.Relatorio"/>
        <mapping class="br.com.login.bean.users.admin.cadastro.CadastrarContratoBean"/>

    </session-factory>
</hibernate-configuration>